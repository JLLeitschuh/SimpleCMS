<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <display-name>Web Application</display-name>

    <servlet>
        <servlet-name>siteServlet</servlet-name>
        <servlet-class>com.cyganov.simplecms.servlets.SiteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>siteServlet</servlet-name>
        <url-pattern>/site/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addSectionServlet</servlet-name>
        <servlet-class>com.cyganov.simplecms.servlets.AddSectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addSectionServlet</servlet-name>
        <url-pattern>/add/*</url-pattern>
    </servlet-mapping>

</web-app>
